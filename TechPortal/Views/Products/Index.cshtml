@model IEnumerable<TechPortal.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product List</h2>
@if (Model.Count() <= 0)
{
    <p>No Products found</p>
}
else
{
    foreach (var product in Model)
    {
        <p>Product: @Html.ActionLink(product.Name,"Edit","Products",new { id = product.ID },null)</p>
    }
}