@model IEnumerable<TechPortal.Models.Customer>
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer List</h2>
@if (Model.Count() <= 0)
{
    <p>No Customers found</p>
}
else
{
    <table>
        <tr>
            <td>    
            @foreach (var customer in Model)
             {
                <p>@Html.ActionLink(customer.CompanyName,"Edit","Customers", new { id = customer.ID }, null)</p>
                <p>@customer.City</p>
                <br />
            }
            </td>
        </tr>
    </table>
}